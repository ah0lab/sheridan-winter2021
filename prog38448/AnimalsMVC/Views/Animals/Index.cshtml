@model AnimalsMVC.Models.IndexViewModel
@{
    ViewData["Title"] = "Animal Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Animals[0].Name)</th>
        <th>@Html.DisplayNameFor(model => model.Animals[0].Category)</th>
        <th></th>
    </tr>

    @foreach (var animal in Model.Animals) {
        <tr>
            <td>@Html.DisplayFor(modelItem => animal.Name)</td>
            <td>@Html.DisplayFor(modelItem => animal.Category)</td>
            <td><a asp-action="Details" asp-route-id="@animal.Id">Details</a></td>
        </tr>
    }

</table>