@model IEnumerable<BA_MT.Models.Student>

@{
    ViewData["Title"] = "Students";
    Layout = "_Layout";
}

<main>
    <section>
        <a asp-action="Create">Create a Student</a>
    </section>
    <section>
        @if (Model != null && Model.Any())
        {
            <table>
                <thead>
                <th>Student ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Birthday</th>
                <th></th>
                </thead>
                <tbody>
                @foreach (var student in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(model => student.Id)</td>
                        <td>@Html.DisplayFor(model => student.FirstName)</td>
                        <td>@Html.DisplayFor(model => student.LastName)</td>
                        <td>@Html.DisplayFor(model => student.Birthday)</td>
                        <td>
                            <ul>
                                <li><a asp-action="Details" asp-route-id="@student.Id.ToString()">Details</a></li>
                                <li><a asp-action="Edit" asp-route-id="@student.Id.ToString()">Edit</a></li>
                                <li><a asp-action="Delete" asp-route-id="@student.Id.ToString()">Delete</a></li>
                                <li><a asp-action="Enroll" asp-route-id="@student.Id.ToString()">Enroll in a course</a></li>
                                
                            </ul>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        }
        else
        {
            <h3>No Students to display. Try adding some</h3>
        }
    </section>
</main>

