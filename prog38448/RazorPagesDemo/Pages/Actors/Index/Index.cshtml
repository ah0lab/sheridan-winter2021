@page

@model RazorPagesDemo.Pages.Actors.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Actors[0].Firstname)</th>
        <th>@Html.DisplayNameFor(model => model.Actors[0].Lastname)</th>
        <th></th>
    </tr>
    @foreach (var item in Model.Actors) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Firstname)</td>
            <td>@Html.DisplayFor(modelItem => item.Lastname)</td>
            <td><a asp-page="/Actors/Details/Details" asp-route-id="@item.Id">Details</a></td>

        </tr>
    }
</table>