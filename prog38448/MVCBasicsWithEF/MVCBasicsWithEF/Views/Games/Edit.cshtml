@model MVCBasicsWithEF.Models.Game

@{
    ViewData["Title"] = "Edit Game";
    Layout = "_Layout";
}
<h2>Edit Game</h2>
<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />  
    <table>
        <tr>
            <td><label asp-for="Title"></label></td>
            <td><input asp-for="Title" /></td>
        </tr>
        <tr>
            <td><label asp-for="Year"></label></td>
            <td><input asp-for="Year" /></td>
        </tr>
    </table>
    <input type="submit" value="Update Game" />
</form>
<a asp-action="Index">Back to Game List</a>
