<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Spinner
            android:layout_width="195dp"
            android:layout_height="33dp" android:id="@+id/sizeSpinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/appIcon"
            android:layout_marginTop="44dp"/>
    <Switch
            android:text="@string/deliveryswitch_labeltext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/switch_delivery"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toppings" android:layout_marginTop="20dp"/>
    <TextView
            android:text="@string/sizespinner_labeltext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/label_sizeSpinner"
            app:layout_constraintTop_toBottomOf="@+id/appIcon"
            app:layout_constraintBottom_toTopOf="@+id/sizeSpinner" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.642"/>
    <TextView
            android:text="@string/toppings_labeltext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/label_toppings"
            app:layout_constraintBottom_toTopOf="@+id/toppings"
            app:layout_constraintTop_toBottomOf="@+id/sizeSpinner" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.458"/>
    <RadioGroup
            android:layout_width="137dp"
            android:layout_height="92dp"
            android:id="@+id/toppings" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintTop_toBottomOf="@+id/sizeSpinner" android:layout_marginTop="44dp">
        <RadioButton
                android:text="Meat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/topping_meat"/>
        <RadioButton
                android:text="Cheese"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/topping_cheese"/>
        <RadioButton
                android:text="@string/toppingsradio_veg_labeltext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/topping_veg"/>
    </RadioGroup>
    <TextView
            android:text="@string/appheading_labeltext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/app_heading"
            tools:text="Pizza Order" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="84dp" app:layout_constraintHorizontal_bias="0.498" android:textSize="24sp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/pizza_fg" android:id="@+id/appIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/app_heading"
            android:layout_marginTop="20dp" app:layout_constraintHorizontal_bias="0.498"/>
    <androidx.appcompat.widget.Toolbar
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:background="#75BAB1"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" tools:layout_editor_absoluteX="1dp" android:id="@+id/toolbar"/>
    <Button
            android:text="@string/orderbutton_text"
            android:layout_width="80dp"
            android:layout_height="42dp" android:id="@+id/button_order" tools:layout_editor_absoluteY="0dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/orderTotal_labeltext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/orderTotal" tools:layout_editor_absoluteY="10dp"
            android:textSize="24sp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/input_address"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/label_address"
            app:layout_constraintVertical_bias="0.273"/>
    <TextView
            android:text="@string/address_labeltext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/label_address"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/deliveryDetailsHeading" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
            android:text="@string/deliverydetailsheading_labeltext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/deliveryDetailsHeading"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintHorizontal_bias="0.501" android:layout_marginTop="16dp"/>
    <View
            android:id="@+id/divider"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/switch_delivery"
            android:layout_marginTop="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>