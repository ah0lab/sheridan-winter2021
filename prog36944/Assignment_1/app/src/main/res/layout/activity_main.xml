<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Spinner
            android:layout_width="195dp"
            android:layout_height="33dp" tools:layout_editor_absoluteX="108dp" android:id="@+id/sizeSpinner"
            tools:layout_editor_absoluteY="292dp"/>
    <Switch
            android:text="Delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/switch_delivery" tools:layout_editor_absoluteY="488dp"
            tools:layout_editor_absoluteX="161dp"/>
    <TextView
            android:text="Pizza Size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/lable_sizeSpinner"
            app:layout_constraintTop_toBottomOf="@+id/appIcon"
            app:layout_constraintBottom_toTopOf="@+id/sizeSpinner" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.642"/>
    <TextView
            android:text="Toppings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/lable_toppings"
            app:layout_constraintBottom_toTopOf="@+id/toppings"
            app:layout_constraintTop_toBottomOf="@+id/sizeSpinner" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.666"/>
    <RadioGroup
            android:layout_width="100dp"
            android:layout_height="91dp" tools:layout_editor_absoluteY="368dp"
            android:id="@+id/toppings" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498">
        <RadioButton
                android:text="Meat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/topping_meat"/>
        <RadioButton
                android:text="Cheese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/topping_cheese"/>
        <RadioButton
                android:text="Vegitables"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/topping_veg"/>
    </RadioGroup>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/heading"
            tools:text="Pizza Order" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="84dp" app:layout_constraintHorizontal_bias="0.498" android:textSize="24sp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/pizza_fg" android:id="@+id/appIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/heading"
            android:layout_marginTop="20dp" app:layout_constraintHorizontal_bias="0.498"/>
    <androidx.appcompat.widget.Toolbar
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:background="#75BAB1"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" tools:layout_editor_absoluteX="1dp" android:id="@+id/toolbar"/>
    <Button
            android:text="Order"
            android:layout_width="80dp"
            android:layout_height="42dp" android:id="@+id/button" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="330dp"/>
    <TextView
            android:text="Total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/orderTotal" tools:layout_editor_absoluteY="10dp"
            tools:layout_editor_absoluteX="16dp" android:textSize="24sp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/editTextTextPostalAddress" tools:layout_editor_absoluteY="612dp"
            tools:layout_editor_absoluteX="99dp"/>
    <TextView
            android:text="Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6" tools:layout_editor_absoluteY="583dp"
            tools:layout_editor_absoluteX="115dp"/>
    <TextView
            android:text="Delivery Details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5" tools:layout_editor_absoluteY="552dp"
            tools:layout_editor_absoluteX="71dp"/>
    <View
            android:id="@+id/divider"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            tools:layout_editor_absoluteX="1dp" tools:layout_editor_absoluteY="532dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>